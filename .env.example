# Environment Variables for Aroma E-commerce Application

# Next.js Environment
NEXT_PUBLIC_API_URL=http://localhost:3000
NODE_ENV=development

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/aroma?retryWrites=true&w=majority
MONGODB_DB_NAME=aroma

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRY=7d

# Cloudinary Configuration (for image uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
NEXT_PUBLIC_CLOUDINARY_FOLDER=aroma_products

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@aroma.com

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe (Optional - for payments)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Application Configuration
NEXT_PUBLIC_APP_NAME=Aroma
NEXT_PUBLIC_APP_URL=https://yourdomain.com
