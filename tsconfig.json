{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/domain/*": [
        "./lib/domain/*"
      ],
      "@/application/*": [
        "./lib/application/*"
      ],
      "@/infrastructure/*": [
        "./lib/infrastructure/*"
      ],
      "@/presentation/*": [
        "./lib/presentation/*"
      ],
      "@/hooks/*": [
        "./lib/presentation/hooks/*"
      ],
      "@/components/*": [
        "./lib/presentation/components/*"
      ],
      "@/stores/*": [
        "./lib/application/stores/*"
      ],
      "@/utils/*": [
        "./lib/utils/*"
      ],
      "@/validations/*": [
        "./validations/*"
      ]
    },
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
